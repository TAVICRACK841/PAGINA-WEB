---
import Layout from "../layouts/Layout.astro"
---
<Layout title="Minecraft">
    <style>
        .content {
            margin-top: 100px; /* Margen superior igual a la altura del top-bar */
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Ajusta el ancho de las columnas */
            gap: 20px; /* Espacio entre los boxes */
        }

        .box {
            width: 90%; /* Ajusta el ancho del box */
            height: 300px; /* Altura deseada del box */
            background-image:url(https://i.pinimg.com/originals/19/b4/3d/19b43dbf92a0b307cbbe9fcbf84c60c8.jpg); /* Color de fondo del box */
            padding: 20px; /* Espacio interior del box */
            border-radius: 10px; /* Borde redondeado del box */
            display: flex; /* Utilizamos flexbox para centrar la imagen */
            justify-content: center; /* Centramos horizontalmente */
            align-items: center; /* Centramos verticalmente */
}
        
        .imagen-container {
            display: flex;
            justify-content: center;
        }
        .imagen {
            width: 90%;
            height: auto;
            border-radius: 10px;
        }
        .button {
            padding: 5px 10px; /* Ajustamos el relleno del bot贸n */
            background-color: #007bff00; /* Color de fondo del bot贸n */
            color: rgb(0, 0, 0); /* Color de texto del bot贸n */
            border: none; /* Quitamos el borde */
            border-radius: 5px; /* Radio de borde */
            cursor: pointer; /* Cambiamos el cursor al pasar sobre el bot贸n */
            text-decoration: none; /* Quitamos la subrayado del enlace */
        }
        .button:hover {
            background-color: rgb(0, 255, 64); /* Cambiamos el color de fondo al pasar el cursor */
        }
        .box {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .button {
            align-self: center;
        }
        .texto-con-contorno {
            font-size: 20px;
            font-weight: 700;
            text-shadow:
            0 0 5px rgb(47, 144, 2),
            0 0 25px rgb(47, 144, 2),
            0 0 50px rgb(47, 144, 2),
            0 0 100px rgb(47, 144, 2);
        }
        .texto-con-contorno2 {
            font-size: 20px;
            font-weight: 700;
            text-shadow:
            0 0 5px rgb(191, 0, 255),
            0 0 25px rgb(191, 0, 255),
            0 0 50px rgb(191, 0, 255),
            0 0 100px rgb(191, 0, 255);
        }
        .texto-con-contorno3 {
            -webkit-text-stroke: 1px white; /* Para navegadores basados en WebKit */
            -webkit-text-stroke-color: 1px white; /* Para otros navegadores */
            color: black; /* Color del texto */
        }
    </style>
    
    <div class="content">
        <div class="box">
            <div class="ui card">
                <div class="image landscape">
                    <img class="imagen" src="https://i.ytimg.com/vi/8PFLvhlsatw/maxresdefault.jpg">
                </div>
                    <a class="texto-con-contorno font-extrabold">DRAGON EVOLUTION 016</a>
                    <div class="meta">
                    <span class="texto-con-contorno2 font-extrabold" >Matheus 016</span>
                    </div>
                    <div class="description">
                    <a class="button texto-con-contorno3 font-extrabold" href="https://www.mediafire.com/file/yseh90spe7ildwz/DBE016_V2_-_BEH.mcaddon/file">Download BEH</a>
                    <a class="button texto-con-contorno3 font-extrabold" href="https://www.mediafire.com/file/22zec0nka0t5bko/DBE016_V2_-_RES.mcaddon/file">Download RES</a>
                    </div>
            </div>
        </div>
        <div class="box">
            <div class="ui card">
                <div class="image landscape">
                    <img class="imagen" src="https://api.mcpedl.com/storage/submissions/89658/100/sketch1658181736649_1-520x245.png">
                </div>
                    <a class="texto-con-contorno font-extrabold">CREATE ADDON</a>
                    <div class="meta">
                    <span class="texto-con-contorno2 font-extrabold" >Ramcor14_BR</span>
                    </div>
                    <div class="description">
                    <a class="button texto-con-contorno3 font-extrabold" href="https://www.mediafire.com/file/gy9uew6otmthv7z/Create+v1.mcaddon/file">Download</a>
                    </div>
            </div>
        </div>
    </div>
</Layout>


