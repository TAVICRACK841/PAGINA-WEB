  <style>
    .content {
      margin-top: 80px; /* Margen superior igual a la altura del top-bar */
    }
    .titulo {
      text-align: center; /* Centra el texto horizontalmente */
      font-size: 6em;
      font-weight: 500;
      color: white;
      text-shadow:
                  0 0 5px #ffbb00,
                  0 0 25px #ffbb00,
                  0 0 50px #ffbb00,
                  0 0 100px #ffbb00;
    }
    .home {
      margin: 60px;
      height: 300px;
      display: flex;
      align-items: center;
      padding: 0 10%;
    }
    .home-conter {
      max-width: 600px;
    }
    .home-conter h1 {
      font-size: 55px;
      font-weight: 700;
      line-height: 1.2;
      text-shadow:
      0 0 5px rgb(191, 0, 255),
      0 0 25px rgb(191, 0, 255),
      0 0 50px rgb(191, 0, 255),
      0 0 100px rgb(191, 0, 255);
    }
    .home-conter h3 {
      font-size: 35px;
      font-weight: 700;
      color: white;
      text-shadow:
      0 0 5px rgb(255, 0, 0),
      0 0 25px rgb(255, 0, 0),
      0 0 50px rgb(255, 0, 0),
      0 0 100px rgb(255, 0, 0);
    }
    .home-conter p {
      font-size: 25px;
      margin: 20px 0 40px;
      text-shadow:
      0 0 5px rgb(0, 0, 0),
      0 0 25px rgb(0, 0, 0),
      0 0 50px rgb(0, 0, 0),
      0 0 100px rgb(0, 0, 0);
    }
    .home-conter .btn-box{
      display: flex;
      justify-content: space-between;
      width: 350px;
      height: 50px;
    }
    .btn-box a {
      position: relative;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      width: 150px;
      height: 100%;
      background: aqua;
      border: 2px solid aqua;
      border-radius: 8px;
      font-size: 18px;
      color: #081b29;
      text-decoration: none;
      font-weight: 600;
      letter-spacing: 1px;
      z-index: 1;
      overflow: hidden;
      transition: .5s;
    }
    .btn-box a:hover{
      color: aqua;
    }
    .btn-box a:nth-child(2){
      background: #081b29;
      color: aqua;
    }
    .btn-box a:nth-child(2)::after{
      background: aqua;
    }
    .btn-box a:nth-child(2):hover{
      color: #081b29;
    }
    .btn-box a::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 0;
      height: 100%;
      background: #081b29;
      z-index: -1;
      transition: 0.5s;
    }
    .btn-box a:hover::after{
      width: 100%;
      height: 100%;
    }
    </style>
    
